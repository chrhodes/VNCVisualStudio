   <DockPanel>

       <vncviews:DeveloperUIInfo x:Name="spDeveloperInfo" DockPanel.Dock="Bottom"/>
       
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
            <Label Content="Message:" />
            <TextBox Text="{Binding Message}" VerticalAlignment="Center"/>
        </StackPanel>

       <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
           <dxlc:LayoutItem Label="Views">
               <dxe:TextEdit x:Name="teViews"
           		Text="{Binding Views.Count, Mode=OneWay}"
               	ToolTip="tooltip"/>
           </dxlc:LayoutItem>

           <dxg:GridControl x:Name="grdViews" 
                           ItemsSource="{Binding Views}">
               <dxg:GridControl.Columns>
                   <dxg:GridColumn Binding="{Binding Message}" Header="Message" ReadOnly="True" />
                   <dxg:GridColumn Binding="{Binding Name}" Header="Name" ReadOnly="True" />
                   <dxg:GridColumn Binding="{Binding ViewType}" Header="ViewType" ReadOnly="True"  />
                   <dxg:GridColumn Binding="{Binding ViewModelType}" Header="ViewModelType" ReadOnly="True" />
               </dxg:GridControl.Columns>
               <dxg:GridControl.View>
                   <dxg:TableView ShowGroupPanel="False" BestFitModeOnSourceChange="AllRows"/>
               </dxg:GridControl.View>
           </dxg:GridControl>

           <dxlc:LayoutItem Label="ActiveViews">
               <dxe:TextEdit x:Name="teActiveViews"
           		Text="{Binding ActiveViews.Count, Mode=OneWay}"
               	ToolTip="tooltip"/>
           </dxlc:LayoutItem>

           <dxg:GridControl x:Name="grdActiveViews" 
                            ItemsSource="{Binding ActiveViews}"  >
               <dxg:GridControl.Columns>
                   <dxg:GridColumn Binding="{Binding Message}" Header="Message" ReadOnly="True" />
                   <dxg:GridColumn Binding="{Binding Name}" Header="Name" ReadOnly="True" />
                   <dxg:GridColumn Binding="{Binding ViewType}" Header="ViewType" ReadOnly="True" />
                   <dxg:GridColumn Binding="{Binding ViewModelType}" Header="ViewModelType" ReadOnly="True" />
               </dxg:GridControl.Columns>
               <dxg:GridControl.View>
                   <dxg:TableView ShowGroupPanel="False" BestFitModeOnSourceChange="AllRows"/>
               </dxg:GridControl.View>
           </dxg:GridControl>

       </StackPanel>

       <StackPanel DockPanel.Dock="Left">

           <Button
               Command="{Binding PerformViewInjectionCommand}" 
               CommandParameter="VNC.WPF.Presentation|Views.UI1|add" 
               Content="Inject (add) UI1" HorizontalContentAlignment="Left" />

           <Button
               Command="{Binding PerformViewInjectionCommand}" 
               CommandParameter="VNC.WPF.Presentation|Views.UI1|activate" 
               Content="activate UI1" HorizontalContentAlignment="Right" />

           <Button
               Command="{Binding PerformViewInjectionCommand}"
               CommandParameter="VNC.WPF.Presentation|Views.UI1|deactivate" 
               Content="deactivate UI1" HorizontalContentAlignment="Right" />

           <Button
               Command="{Binding PerformViewInjectionCommand}"
               CommandParameter="VNC.WPF.Presentation|Views.UI1|remove" 
               Content="remove UI1" HorizontalContentAlignment="Right" />

           <Button
               Command="{Binding PerformViewInjectionCommand}" 
               CommandParameter="VNC.WPF.Presentation|Views.UI2|add" 
               Content="Inject (add) UI2" HorizontalContentAlignment="Left" />

           <Button
               Command="{Binding PerformViewInjectionCommand}" 
               CommandParameter="VNC.WPF.Presentation|Views.UI2|activate" 
               Content="activate UI2" HorizontalContentAlignment="Right" />

           <Button
               Command="{Binding PerformViewInjectionCommand}"
               CommandParameter="VNC.WPF.Presentation|Views.UI2|deactivate" 
               Content="deactivate UI2" HorizontalContentAlignment="Right" />

           <Button
               Command="{Binding PerformViewInjectionCommand}"
               CommandParameter="VNC.WPF.Presentation|Views.UI2|remove" 
               Content="remove UI2" HorizontalContentAlignment="Right" />            

       </StackPanel>

       <StackPanel DockPanel.Dock="Right">

           <Button
               Command="{Binding PerformViewInjectionCommand}" 
               CommandParameter="VNC.WPF.Presentation|Views.UI1_Beta|add" 
               Content="Inject (add) UI1_Beta" HorizontalContentAlignment="Left" />

           <Button
               Command="{Binding PerformViewInjectionCommand}" 
               CommandParameter="VNC.WPF.Presentation|Views.UI1_Beta|activate" 
               Content="activate UI1_Beta" HorizontalContentAlignment="Right" />

           <Button
               Command="{Binding PerformViewInjectionCommand}"
               CommandParameter="VNC.WPF.Presentation|Views.UI1_Beta|deactivate" 
               Content="deactivate UI1_Beta" HorizontalContentAlignment="Right" />

           <Button
               Command="{Binding PerformViewInjectionCommand}"
               CommandParameter="VNC.WPF.Presentation|Views.UI1_Beta|remove" 
               Content="remove UI1_Beta" HorizontalContentAlignment="Right" />


            <Button
                Command="{Binding PerformViewInjectionCommand}" 
                CommandParameter="VNC.WPF.Presentation|Views.UI2_Beta|add|true" 
                Content="Inject (add) UI2_Beta" HorizontalContentAlignment="Left" />

            <Button
                Command="{Binding PerformViewInjectionCommand}" 
                CommandParameter="VNC.WPF.Presentation|Views.UI2_Beta|activate" 
                Content="activate UI2_Beta" HorizontalContentAlignment="Right" />

            <Button
                Command="{Binding PerformViewInjectionCommand}"
                CommandParameter="VNC.WPF.Presentation|Views.UI2_Beta|deactivate" 
                Content="deactivate UI2_Beta" HorizontalContentAlignment="Right" />

            <Button
                Command="{Binding PerformViewInjectionCommand}"
                CommandParameter="VNC.WPF.Presentation|Views.UI2_Beta|remove" 
                Content="remove UI2_Beta" HorizontalContentAlignment="Right" />
                
       </StackPanel>
       
       <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.ViewInjectionView}" />

   </DockPanel>

</vncmvvm:ViewBase>