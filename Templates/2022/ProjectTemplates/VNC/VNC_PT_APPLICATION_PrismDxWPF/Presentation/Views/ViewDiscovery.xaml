    <DockPanel>

        <vncviews:DeveloperUIInfo x:Name="spDeveloperInfo" DockPanel.Dock="Bottom"/>

        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="5">
            <Button
