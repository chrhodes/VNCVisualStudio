    <DockPanel>

        <vncviews:DeveloperUIInfo x:Name="spDeveloperInfo" DockPanel.Dock="Bottom"/>

        <StackPanel DockPanel.Dock="Left">
            <Button Margin="5"
                    Command="{Binding NavigateUI1Command}"
